{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"declaration": false,
		"emitDeclarationOnly": false,
		"baseUrl": ".",
		"paths": {
			"ignite-element/jsx": ["./src/jsx"],
			"ignite-element/jsx/*": ["./src/jsx/*"]
		},
		"jsxImportSource": "ignite-element/jsx"
	},
	"include": ["src/examples", "src/tests"],
	"exclude": ["node_modules", "dist"]
}
