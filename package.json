{
	"name": "ignite-element",
	"version": "1.4.7",
	"type": "module",
	"main": "dist/ignite-element.cjs.js",
	"types": "dist/types/index.d.ts",
	"module": "dist/ignite-element.es.js",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/ignite-element.es.js",
			"require": "./dist/ignite-element.cjs.js",
			"default": "./dist/ignite-element.es.js"
		}
	},
	"description": "A framework-agnostic library for creating web components with state management support.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/0xjcf/ignite-element.git"
	},
	"homepage": "https://github.com/0xjcf/ignite-element#readme",
	"bugs": {
		"url": "https://github.com/0xjcf/ignite-element/issues"
	},
	"keywords": [
		"web-components",
		"state-management",
		"redux",
		"xstate",
		"mobx",
		"ignite-element"
	],
	"author": "Jose C. Flores (0xjcf)",
	"license": "MIT",
	"files": [
		"dist",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"scripts": {
		"build:types": "tsc",
		"build:js": "vite build",
		"build": "pnpm run build:types && pnpm run build:js",
		"examples:xstate": "cd src/examples/xstate && pnpm install --ignore-workspace --no-link-workspace-packages && pnpm run build:css && pnpm run dev",
		"examples:redux": "cd src/examples/redux && pnpm install --ignore-workspace --no-link-workspace-packages && pnpm run dev",
		"examples:mobx": "cd src/examples/mobx && pnpm install --ignore-workspace --no-link-workspace-packages && pnpm run dev",
		"test": "vitest --run",
		"test:coverage": "vitest --run --coverage",
		"test:node": "FORCE_COLOR=1 vitest --config vitest.node.config.ts --run",
		"typecheck": "pnpm exec tsc --noEmit --pretty false",
		"format": "biome format --write .",
		"check": "biome check .",
		"lint": "biome lint .",
		"release": "changeset publish",
		"postrelease": "pnpm publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@playwright/test": "^1.56.0",
		"@types/jsdom": "^27.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"chalk": "^5.6.2",
		"husky": "^9.1.7",
		"jsdom": "^27.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^3.2.4",
		"xstate": "^5.23.0"
	},
	"peerDependencies": {
		"@reduxjs/toolkit": ">=2.3.0",
		"lit-html": ">=3.2.1",
		"mobx": ">=6.13.5",
		"redux": ">=5.0.1",
		"xstate": ">=5.19.0"
	},
	"engines": {
		"node": ">=22"
	}
}
